<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/x-icon" href="../images/favicon.ico">
        <title>Projects NFT Mint</title>
        <meta name="author" content="Mia C. Bracken">
        <meta name="description" content="A page for multiple projects">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="./css/style.css">
    </head>
    <body>

        <header>
        <%- include('header'); %>
        <header>


            <div class="spacer"></div>
            <div>Projects</div>
            <% projectArray.forEach((item, index) => { %>
            <div>
              <a href='/project/<%= index + 1 %>'><%= item %></a>
            <!-- <h1 class="display-5 justify-content-center text-center">Projects</h1> -->
            <div class="mb-5">
              <div class="row">
                <div class="m-1 row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 text-center justify-content-center">
                  <% projectArray.forEach((item, index) => {%>
                  <div class="col-10">
                    <%- include('projectCard', {ident:index+1, image: item.img_url, name: item.project_name, ident: item.id}); %>
                  </div>
                  <% }); %>
                </div>
              </div>
            </div>
            <% }); %>
          </div>   
        
        <% projectArray.forEach((item, index) => { %>
        <!-- <div>
            <a href='/project/<%= index + 1 %>'><%= item %></a>
            <%- include('projectCard', {ident: index+1, image: item.img_url, name: item.project_name}); %>
        </div> -->
        <% }); %>

        <div class="container">
            <%- include('footer'); %>
        </div>
